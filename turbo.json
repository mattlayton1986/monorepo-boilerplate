{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:web": {
      "env": ["GLOBAL_ENV_VAR"]
    },
    "dev:api": {
      "env": ["GLOBAL_ENV_VAR"]
    },
    "format": {
      "dependsOn": []
    }
  }
}
